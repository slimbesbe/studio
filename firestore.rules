
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // --- FONCTIONS DE SÉCURITÉ ---
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Vérification Super Admin par UID ou Email (Statique et prioritaire)
    function isSuperAdmin() {
      return isSignedIn() && (
        request.auth.uid == "GPgreBe1JzZYbEHQGn3xIdcQGQs1" ||
        request.auth.token.email == "slim.besbes@yahoo.fr"
      );
    }

    // Vérification Admin via collection roles_admin ou check Super Admin
    function isAdmin() { 
      return isSuperAdmin() || (isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- RÈGLES DE MATCHING ---

    // 1. ACCÈS TOTAL ET PRIORITAIRE POUR LE SUPER ADMIN
    // Cette règle récursive permet au Super Admin de tout faire sans restriction de listing
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }

    // 2. RÈGLES SPÉCIFIQUES POUR LES AUTRES UTILISATEURS
    
    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow write: if isSuperAdmin();
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin() || (isOwner(userId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'status', 'accessType', 'groupId']));
      
      // Accès aux sous-collections privées (sessions, attempts, results, etc.)
      match /{allSubcollections=**} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    match /questions/{questionId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /coachingSessions/{sessionId} {
      // Un admin peut tout lister/voir
      // Un utilisateur peut voir un doc spécifique s'il est publié
      // Un utilisateur peut lister uniquement s'il filtre par isPublished == true
      allow get: if isSignedIn() && (isAdmin() || resource.data.isPublished == true);
      allow list: if isAdmin();
      allow list: if isSignedIn() && resource.data.isPublished == true;
      allow write: if isAdmin();
    }

    match /coachingGroups/{groupId} {
      allow read: if isAdmin() || (isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.groupId == groupId);
      allow write: if isAdmin();
    }

    match /coachingAttempts/{attemptId} {
      // Un admin peut tout lister/voir
      // Un utilisateur peut voir ses propres tentatives
      allow get: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow list: if isAdmin();
      allow list: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow write: if isAdmin() || (isSignedIn() && request.resource.data.userId == request.auth.uid);
    }

    match /exams/{examId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
      match /{allSubcollections=**} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    }

    match /counters/{counterId} { allow read, write: if isAdmin(); }
  }
}
