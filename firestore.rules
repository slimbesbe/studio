
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // --- FONCTIONS DE SÉCURITÉ ---
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Vérification Super Admin par UID (Méthode la plus fiable)
    function isSuperAdmin() {
      return isSignedIn() && (
        request.auth.uid == "GPgreBe1JzZYbEHQGn3xIdcQGQs1" ||
        request.auth.token.email == "slim.besbes@yahoo.fr"
      );
    }

    // Vérification Admin via collection roles_admin
    function isAdmin() { 
      return isSuperAdmin() || (isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- RÈGLES DE MATCHING ---

    // 1. ACCÈS TOTAL POUR LE SUPER ADMIN
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }

    // 2. RÈGLES SPÉCIFIQUES
    
    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow write: if isSuperAdmin();
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin() || (isOwner(userId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'status', 'accessType', 'groupId']));
      
      match /sessions/{docId} { allow read, write: if isOwner(userId); }
      match /attempts/{docId} { allow read, write: if isOwner(userId); }
      match /killMistakes/{docId} { allow read, write: if isOwner(userId); }
      match /exam_state/{docId} { allow read, write: if isOwner(userId); }
      match /exam_results/{docId} { allow read, write: if isOwner(userId); }
    }

    match /questions/{questionId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /coachingSessions/{sessionId} {
      allow read: if isAdmin() || (isSignedIn() && resource.data.isPublished == true);
      allow write: if isAdmin();
    }

    match /coachingGroups/{groupId} {
      allow read: if isAdmin() || (isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.groupId == groupId);
      allow write: if isAdmin();
    }

    match /coachingAttempts/{attemptId} {
      allow read, list: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow write: if isSignedIn() && (request.resource.data.userId == request.auth.uid || isAdmin());
    }

    match /exams/{examId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
      match /questions/{qId} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    }

    match /counters/{counterId} { allow read, write: if isAdmin(); }
  }
}
