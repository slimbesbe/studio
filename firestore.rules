
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // --- FONCTIONS DE SÉCURITÉ ---
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isSuperAdmin() {
      return isSignedIn() && (
        request.auth.uid == "vwyrAnNtQkSojYSEEK2qkRB5feh2" || 
        request.auth.uid == "GPgreBe1JzZYbEHQGn3xIdcQGQs1" ||
        request.auth.token.email == "slim.besbes@yahoo.fr"
      );
    }

    function isAdmin() { 
      return isSuperAdmin() || (isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)));
    }

    // --- RÈGLES PRIORITAIRES ADMIN ---
    // Les administrateurs peuvent TOUT lister et lire sans restrictions de filtrage.
    match /{document=**} {
      allow list, get: if isAdmin();
      allow write: if isSuperAdmin();
    }

    // --- RÈGLES UTILISATEURS (Filtrage obligatoire pour les requêtes non-admin) ---
    
    match /users/{userId} {
      allow get: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId;
      
      match /{allSubcollections=**} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    match /questions/{questionId} {
      allow read: if isSignedIn();
    }

    match /coachingSessions/{sessionId} {
      allow list, get: if isSignedIn() && resource.data.isPublished == true;
    }

    match /coachingAttempts/{attemptId} {
      allow list, get: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow write: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    match /coachingGroups/{groupId} {
      allow get: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.groupId == groupId;
    }

    match /exams/{examId} {
      allow read: if isSignedIn();
      match /{allSubcollections=**} { allow read: if isSignedIn(); }
    }
  }
}
