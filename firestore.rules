rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // --- FONCTIONS DE SÉCURITÉ ---
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Définition statique des Super Admins (UIDs et Email de bootstrap)
    function isSuperAdmin() {
      return isSignedIn() && (
        request.auth.uid == "vwyrAnNtQkSojYSEEK2qkRB5feh2" || 
        request.auth.uid == "GPgreBe1JzZYbEHQGn3xIdcQGQs1" ||
        request.auth.token.email == "slim.besbes@yahoo.fr"
      );
    }

    // Un Admin est soit un Super Admin (via UID/Email), soit un utilisateur ayant un document dans roles_admin
    function isAdmin() { 
      return isSuperAdmin() || (isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)));
    }

    // --- RÈGLE PRIORITAIRE SUPER ADMIN (GOD MODE) ---
    // Cette règle permet aux Super Admins de tout lister et lire sans restrictions
    // Elle est isolée pour permettre le listing global sans filtres.
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }

    // --- RÈGLES PAR COLLECTION ---
    
    match /users/{userId} {
      allow list: if isAdmin();
      allow get: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow create: if isAdmin();
      allow update: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
      
      match /{allSubcollections=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
    }

    match /questions/{questionId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /coachingSessions/{sessionId} {
      // Autorise le listing global pour les admins
      allow list: if isAdmin();
      // Autorise le listing filtré pour les utilisateurs
      allow list: if isSignedIn() && resource.data.isPublished == true;
      
      allow get: if isAdmin() || (isSignedIn() && resource.data.isPublished == true);
      allow write: if isAdmin();
    }

    match /coachingAttempts/{attemptId} {
      // Autorise le listing global pour les admins
      allow list: if isAdmin();
      // Autorise le listing filtré pour les utilisateurs (propriétaire uniquement)
      allow list: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      allow get: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow write: if isSignedIn() && (isAdmin() || request.resource.data.userId == request.auth.uid);
    }

    match /coachingGroups/{groupId} {
      allow list: if isAdmin();
      allow get: if isAdmin() || (isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.groupId == groupId);
      allow write: if isAdmin();
    }

    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin();
    }

    match /exams/{examId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
      match /{allSubcollections=**} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    }

    match /counters/{counterId} { allow read, write: if isAdmin(); }
  }
}
