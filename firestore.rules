
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isAdmin() { return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)); }
    function isOwner(userId) { return isSignedIn() && request.auth.uid == userId; }
    function isSuperAdminEmail() { return isSignedIn() && (request.auth.token.email == "slim.besbes@yahoo.fr" || request.auth.token.email == "admin@simovex.com"); }

    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow write: if isSuperAdminEmail() || isAdmin();
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isAdmin() || isSuperAdminEmail();
      allow update: if isAdmin() || (isOwner(userId) && 
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'status', 'expiresAt', 'validityType', 'validityDays']));
      allow delete: if isAdmin();
    }

    match /questions/{questionId} {
      // Les utilisateurs peuvent lire uniquement les questions actives
      // Ils ne voient pas le champ questionCode via l'UI, mais on limite ici l'acc√®s global
      allow read: if isAdmin() || (isSignedIn() && resource.data.isActive == true);
      allow write: if isAdmin();
    }

    match /counters/{counterId} {
      allow read, write: if isAdmin();
    }

    match /{path=**}/answers/{answerId} {
      allow read, write: if isSignedIn();
    }
  }
}
