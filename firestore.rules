
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // --- FONCTIONS DE SÉCURITÉ ---
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isSuperAdmin() {
      // Priorité absolue aux UIDs connus et accès sécurisé à l'email
      return isSignedIn() && (
        request.auth.uid == "vwyrAnNtQkSojYSEEK2qkRB5feh2" || 
        request.auth.uid == "GPgreBe1JzZYbEHQGn3xIdcQGQs1" || 
        request.auth.token.get('email', '') == "slim.besbes@yahoo.fr"
      );
    }

    function isAdmin() { 
      return isSuperAdmin() || exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // --- ACCÈS TOTAL SUPER ADMIN (PRIORITÉ ABSOLUE) ---
    // Cette règle permet au Super Admin de tout lister et tout modifier sans restriction
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }

    // --- RÈGLES SPÉCIFIQUES PAR COLLECTION ---
    
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin();
    }

    match /users/{userId} {
      allow get: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
      
      match /{allSubcollections=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
    }

    match /questions/{questionId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /coachingSessions/{sessionId} {
      allow read, list: if isAdmin() || (isSignedIn() && resource.data.get('isPublished', false) == true);
      allow write: if isAdmin();
    }

    match /coachingGroups/{groupId} {
      allow read, list: if isAdmin() || (isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.groupId == groupId);
      allow write: if isAdmin();
    }

    match /coachingAttempts/{attemptId} {
      // Autorise le listing complet pour les admins, ou filtré pour l'utilisateur
      allow read, list: if isAdmin() || (isSignedIn() && (resource == null || resource.data.userId == request.auth.uid));
      allow write: if isAdmin() || (isSignedIn() && request.resource.data.userId == request.auth.uid);
    }

    match /exams/{examId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
      match /{allSubcollections=**} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    }

    match /counters/{counterId} { allow read, write: if isAdmin(); }
  }
}
