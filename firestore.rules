
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // --- FONCTIONS DE SÉCURITÉ DE BASE ---
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Vérification Super Admin par UID (Méthode la plus rapide et fiable)
    function isSuperAdmin() {
      return isSignedIn() && request.auth.uid == "GPgreBe1JzZYbEHQGn3xIdcQGQs1";
    }

    // Vérification Admin via collection roles_admin ou check Super Admin
    function isAdmin() { 
      return isSuperAdmin() || exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- ACCÈS TOTAL SUPER ADMIN ---
    // Cette règle en tête de fichier garantit que le Super Admin n'est jamais bloqué
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }

    // --- RÈGLES SPÉCIFIQUES ---
    
    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow write: if isSuperAdmin();
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin() || (isOwner(userId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'status', 'accessType', 'groupId']));
      
      match /{allSubcollections=**} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    match /questions/{questionId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /coachingSessions/{sessionId} {
      allow get: if isSignedIn();
      // On sépare le listing pour éviter les conflits de filtres resource.data
      allow list: if isAdmin();
      allow list: if isSignedIn() && resource.data.isPublished == true;
      allow write: if isAdmin();
    }

    match /coachingGroups/{groupId} {
      allow read: if isAdmin() || (isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.groupId == groupId);
      allow write: if isAdmin();
    }

    match /coachingAttempts/{attemptId} {
      allow get: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      // On sépare le listing
      allow list: if isAdmin();
      allow list: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow write: if isAdmin() || (isSignedIn() && request.resource.data.userId == request.auth.uid);
    }

    match /exams/{examId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
      match /{allSubcollections=**} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    }

    match /counters/{counterId} { allow read, write: if isAdmin(); }
  }
}
