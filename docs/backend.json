
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Utilisateur SIMOVEX avec statistiques de performance.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "role": { "type": "string", "enum": ["super_admin", "admin", "user"] },
        "status": { "type": "string", "enum": ["active", "disabled", "expired"] },
        "simulationsCount": { "type": "number" },
        "averageScore": { "type": "number" },
        "totalTimeSpent": { "type": "number" }
      }
    },
    "Question": {
      "title": "Question",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "text": { "type": "string" },
        "choices": { "type": "array", "items": { "type": "string" } },
        "correctChoice": { "type": "string", "description": "Index ou ID du bon choix" },
        "explanation": {
          "type": "object",
          "properties": {
            "correctRationale": { "type": "string" },
            "distractorRationales": { "type": "object" }
          }
        },
        "tags": {
          "type": "object",
          "properties": {
            "domain": { "type": "string", "enum": ["People", "Process", "Business"] },
            "approach": { "type": "string", "enum": ["Predictive", "Agile", "Hybrid"] },
            "difficulty": { "type": "string", "enum": ["Easy", "Medium", "Hard"] }
          }
        },
        "isActive": { "type": "boolean" }
      }
    },
    "TrainingSession": {
      "title": "TrainingSession",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "mode": { "type": "string", "enum": ["domain", "approach", "kill_mistake"] },
        "filters": { "type": "object" },
        "questionIds": { "type": "array", "items": { "type": "string" } },
        "status": { "type": "string", "enum": ["active", "finished"] },
        "summary": {
          "type": "object",
          "properties": {
            "total": { "type": "number" },
            "correct": { "type": "number" },
            "wrong": { "type": "number" }
          }
        }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/questions/{questionId}",
        "definition": { "schema": { "$ref": "#/backend/entities/Question" }, "description": "Banque centrale" }
      },
      {
        "path": "/users/{userId}/sessions/{sessionId}",
        "definition": { "schema": { "$ref": "#/backend/entities/TrainingSession" }, "description": "Sessions d'entraînement" }
      },
      {
        "path": "/users/{userId}/attempts/{attemptId}",
        "definition": { "schema": { "type": "object" }, "description": "Réponses individuelles" }
      },
      {
        "path": "/users/{userId}/killMistakes/{questionId}",
        "definition": { "schema": { "type": "object" }, "description": "Suivi des erreurs à corriger" }
      }
    ]
  }
}
