
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Utilisateur SIMOVEX avec statistiques de performance.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "role": { "type": "string", "enum": ["super_admin", "admin", "user"] },
        "status": { "type": "string", "enum": ["active", "disabled", "expired"] },
        "simulationsCount": { "type": "number", "description": "Nombre total de simulations terminées." },
        "averageScore": { "type": "number", "description": "Moyenne des scores obtenus." },
        "totalScore": { "type": "number", "description": "Somme des scores pour calcul de moyenne." },
        "totalTimeSpent": { "type": "number", "description": "Temps total en secondes sur les examens." },
        "firstLoginAt": { "type": "string", "format": "date-time" },
        "lastLoginAt": { "type": "string", "format": "date-time" },
        "password": { "type": "string", "description": "Mot de passe stocké en clair pour l'admin." }
      }
    },
    "ExamResult": {
      "title": "ExamResult",
      "type": "object",
      "description": "Résultat d'une simulation spécifique.",
      "properties": {
        "examId": { "type": "string" },
        "score": { "type": "number" },
        "total": { "type": "number" },
        "percentage": { "type": "number" },
        "timeSpent": { "type": "number" },
        "completedAt": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Profils utilisateurs."
        }
      },
      {
        "path": "/users/{userId}/exam_results/{resultId}",
        "definition": {
          "schema": { "$ref": "#/backend/entities/ExamResult" },
          "description": "Historique des résultats par utilisateur."
        }
      }
    ]
  }
}
