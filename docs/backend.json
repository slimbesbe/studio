
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Utilisateur SIMOVEX.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "role": { "type": "string", "enum": ["super_admin", "admin", "user"] },
        "status": { "type": "string", "enum": ["active", "disabled", "expired"] }
      }
    },
    "Exam": {
      "title": "Exam",
      "type": "object",
      "description": "Un des 5 examens disponibles.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "isActive": { "type": "boolean" }
      }
    },
    "Question": {
      "title": "Question",
      "type": "object",
      "description": "Question d'examen PMP.",
      "properties": {
        "id": { "type": "string" },
        "questionCode": { "type": "string", "description": "ID unique lisible ex: Q-000001" },
        "statement": { "type": "string" },
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "text": { "type": "string" }
            }
          }
        },
        "correctOptionIds": { "type": "array", "items": { "type": "string" } },
        "isMultipleCorrect": { "type": "boolean" },
        "explanation": { "type": "string" },
        "isActive": { "type": "boolean" },
        "createdByRole": { "type": "string" },
        "examId": { "type": "string" }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/exams/{examId}",
        "definition": {
          "schema": { "$ref": "#/backend/entities/Exam" },
          "description": "Collection des 5 examens."
        }
      },
      {
        "path": "/exams/{examId}/questions/{questionId}",
        "definition": {
          "schema": { "$ref": "#/backend/entities/Question" },
          "description": "Questions par examen."
        }
      },
      {
        "path": "/users/{userId}",
        "definition": {
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Profils utilisateurs."
        }
      },
      {
        "path": "/counters/{counterId}",
        "definition": {
          "schema": { "type": "object", "properties": { "current": { "type": "number" } } },
          "description": "Compteurs globaux pour les IDs uniques."
        }
      }
    ]
  }
}
