{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Utilisateur Simu-lux avec statistiques de performance et acc√®s coaching.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "role": { "type": "string", "enum": ["super_admin", "admin", "user"] },
        "status": { "type": "string", "enum": ["active", "disabled", "expired"] },
        "accessType": { "type": "string", "enum": ["simulation", "coaching", "coaching_simulation"] },
        "groupId": { "type": "string" },
        "simulationsCount": { "type": "number" },
        "averageScore": { "type": "number" },
        "totalTimeSpent": { "type": "number" },
        "allowedExams": { "type": "array", "items": { "type": "string" } }
      }
    },
    "CoachingSession": {
      "title": "CoachingSession",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "index": { "type": "number" },
        "title": { "type": "string" },
        "type": { "type": "string", "enum": ["MEET", "QUIZ"] },
        "meetLink": { "type": "string" },
        "questionStart": { "type": "number" },
        "questionEnd": { "type": "number" },
        "isPublished": { "type": "boolean" },
        "updatedAt": { "type": "string", "format": "date-time" }
      }
    },
    "CoachingGroup": {
      "title": "CoachingGroup",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "isActive": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    },
    "CoachingAttempt": {
      "title": "CoachingAttempt",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "groupId": { "type": "string" },
        "sessionId": { "type": "string" },
        "scorePercent": { "type": "number" },
        "correctCount": { "type": "number" },
        "totalQuestions": { "type": "number" },
        "durationSec": { "type": "number" },
        "submittedAt": { "type": "string", "format": "date-time" }
      }
    },
    "Question": {
      "title": "Question",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "index": { "type": "number", "description": "Global index for coaching sequences (1-180)" },
        "text": { "type": "string" },
        "choices": { "type": "array", "items": { "type": "string" } },
        "correctChoice": { "type": "string" },
        "correctChoiceIds": { "type": "array", "items": { "type": "string" } },
        "explanation": { "type": "string" },
        "tags": {
          "type": "object",
          "properties": {
            "domain": { "type": "string" },
            "approach": { "type": "string" },
            "difficulty": { "type": "string" }
          }
        }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/questions/{questionId}",
        "definition": { "schema": { "$ref": "#/backend/entities/Question" }, "description": "Banque centrale" }
      },
      {
        "path": "/coachingSessions/{sessionId}",
        "definition": { "schema": { "$ref": "#/backend/entities/CoachingSession" }, "description": "Configuration S1..S6" }
      },
      {
        "path": "/coachingGroups/{groupId}",
        "definition": { "schema": { "$ref": "#/backend/entities/CoachingGroup" }, "description": "Groupes de participants" }
      },
      {
        "path": "/coachingAttempts/{attemptId}",
        "definition": { "schema": { "$ref": "#/backend/entities/CoachingAttempt" }, "description": "Scores coaching" }
      },
      {
        "path": "/users/{userId}",
        "definition": { "schema": { "$ref": "#/backend/entities/User" }, "description": "Profils participants" }
      }
    ]
  }
}
