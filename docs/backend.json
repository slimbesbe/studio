
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Représente un utilisateur de SIMOVEX avec gestion de validité.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "role": { "type": "string", "enum": ["super_admin", "admin", "user"] },
        "status": { "type": "string", "enum": ["active", "disabled", "expired"] },
        "validityType": { "type": "string", "enum": ["days", "fixedDate"] },
        "validityDays": { "type": "number" },
        "expiresAt": { "type": "string", "format": "date-time" },
        "disabledReason": { "type": "string" },
        "password": { "type": "string", "description": "Mot de passe en clair (visible par l'admin)" },
        "createdAt": { "type": "string", "format": "date-time" },
        "lastLoginAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "email", "role", "status"]
    },
    "Question": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Question",
      "type": "object",
      "description": "Question d'examen avec choix variables et identifiant unique.",
      "properties": {
        "id": { "type": "string" },
        "questionCode": { "type": "string", "description": "Code unique lisible ex: Q-000001" },
        "statement": { "type": "string" },
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "text": { "type": "string" }
            }
          }
        },
        "correctOptionIds": {
          "type": "array",
          "items": { "type": "string" }
        },
        "isMultipleCorrect": { "type": "boolean" },
        "explanation": { "type": "string" },
        "category": { "type": "string" },
        "difficulty": { "type": "string", "enum": ["Easy", "Medium", "Hard"] },
        "isActive": { "type": "boolean" },
        "createdByRole": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["statement", "options", "correctOptionIds", "isMultipleCorrect", "questionCode"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Profils utilisateurs avec métadonnées de sécurité."
        }
      },
      {
        "path": "/questions/{questionId}",
        "definition": {
          "entityName": "Question",
          "schema": { "$ref": "#/backend/entities/Question" },
          "description": "Banque de questions."
        }
      },
      {
        "path": "/counters/questions",
        "definition": {
          "description": "Compteur global pour les IDs de questions."
        }
      },
      {
        "path": "/roles_admin/{userId}",
        "definition": {
          "description": "Indicateur de statut admin."
        }
      }
    ]
  }
}
